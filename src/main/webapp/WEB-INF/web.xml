<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>dough</display-name>
    <description>Personal finance software.</description>

    <listener>
        <listener-class>name.mutant.dough.AppStartUp</listener-class>
    </listener>
    <listener>
        <listener-class>name.mutant.dough.CloseEntityManagerFactory</listener-class>
    </listener>

    <servlet>
        <servlet-name>DashboardLoad</servlet-name>
        <servlet-class>name.mutant.dough.servlet.DashboardLoad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcctEditLoad</servlet-name>
        <servlet-class>name.mutant.dough.servlet.AcctEditLoad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcctEditProcess</servlet-name>
        <servlet-class>name.mutant.dough.servlet.AcctEditProcess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcctUpload</servlet-name>
        <servlet-class>name.mutant.dough.servlet.AcctUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcctUploadProcess</servlet-name>
        <servlet-class>name.mutant.dough.servlet.AcctUploadProcess</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DashboardLoad</servlet-name>
        <url-pattern>/DashboardLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcctEditLoad</servlet-name>
        <url-pattern>/AcctEditLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcctEditProcess</servlet-name>
        <url-pattern>/AcctEditProcess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcctUpload</servlet-name>
        <url-pattern>/AcctUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcctUploadProcess</servlet-name>
        <url-pattern>/AcctUploadProcess</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>DashboardLoad</welcome-file>
    </welcome-file-list>
</web-app>
