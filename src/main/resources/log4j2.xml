<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%date{ABSOLUTE} [%thread] %-5level %logger{1}.%method - %message%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingFile name="file" fileName="../logs/dough.log" filePattern="../logs/dough-%i.log.gz">
            <CronTriggeringPolicy schedule="0 0 0 * * ?"/>
            <DefaultRolloverStrategy max="30"/>
            <PatternLayout>
                <Pattern>%date [%thread] %-5level %logger - %message%n</Pattern>
            </PatternLayout>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="name.mutant.dough" level="debug"/>
        <Root level="info">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>